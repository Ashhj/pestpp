CXX := g++
FC := gfortran
CFLAGS := -g -c -std=c++0x 
FFLAGS := -g -c -cpp
INCLUDES := 

OUT = libpest_routines.a
OBJECTS	:= io_utils.o \
           readins.o \
           writtpl.o 
 
$(OUT): $(OBJECTS)
	ar rcs $(OUT) $(OBJECTS)

%.o: %.cpp
	$(CXX) $(CFLAGS) $(INCLUDES) $< -c $(input) -o $@

%.o: %.for
	$(FC) $(FFLAGS) $(INCLUDES) $< -c $(input) -o $@

clean:
	rm $(OBJECTS) $(OUT)