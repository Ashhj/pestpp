CXX := g++
FC := gfortran
CFLAGS := -O2 -c -std=c++0x 
FFLAGS := -O2 -c -cpp
INCLUDES := -I ../ -I ../yamr -I ../pestpp_common

LIB = libpestpp_com.a
OBJECTS	:= FileManager.o \
           ParamTransformSeq.o \
           SVDPackage.o \
           Jacobian_1to1.o \
           Pest.o \
           SVD_PROPACK.o \
           Jacobian.o \
           pest_data_structs.o \
           SVDSolver.o \
           eigen_tools.o \
           PriorInformation.o \
           TerminationController.o \
           ModelRunPP.o \
           QSqrtMatrix.o \
           Transformation.o \
           ObjectiveFunc.o \
           Regularization.o \
           OutputFileWriter.o \
           SVDASolver.o
 
$(LIB): $(OBJECTS)
	ar rcs $(LIB) $(OBJECTS)

%.o: %.cpp
	$(CXX) $(CFLAGS) $(INCLUDES) $< -c $(input) -o $@

%.o: %.for
	$(FC) $(FFLAGS) $(INCLUDES) $< -c $(input) -o $@

clean:
	rm $(OBJECTS) $(OUT)