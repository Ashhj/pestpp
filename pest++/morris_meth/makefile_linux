CC := g++
FC := gfortran
CFLAGS := -g -c -std=c++0x 
FFLAGS := -g -c -cpp
INCLUDES := -I ../../Eigen -I ../../yam -I ../../pest++/pestpp_common -I ../../lapackpp-2.5.4/include

EXE = morris_meth
OBJECTS	:= main.o \
           MorrisMethod.o
 
$(EXE): $(OBJECTS)
	ar rcs $(OUT) $(OBJECTS)

%.o: %.cpp
	$(CC) $(CFLAGS) $(INCLUDES) $< -c $(input) -o $@

%.o: %.for
	$(FC) $(FFLAGS) $(INCLUDES) $< -c $(input) -o $@