OUT = gsa.exe
OBJECTS	:= main.o \
           GsaAbstractBase.o \
           MorrisMethod.o \
	   sobol.o \
	   Stats.o \
	   TornadoPlot.o 
 

$(OUT): $(OBJECTS)
	$(CXX) $(OBJECTS) $(CFLAGS) $(LFLAGS) $(LIBLDIR) $(LIBS) -o $(OUT)

%.o: %.cpp
	$(CXX) $(CFLAGS) $(INCLUDES) $< -c $(input) -o $@

%.o: %.for
	$(FC) $(FFLAGS) $(INCLUDES) $< -c $(input) -o $@

clean:
	rm $(OBJECTS) $(OUT)
