CXX := g++
CC := g++
CFLAGS := -g -c -std=c++0x -Wextra -Wall -pedantic -P -Wswitch-enum -Wunreachable-code
INCLUDES := -I../ -I ../common -I../iopp

OUT = librunmanager.a
OBJECTS	:= RunManagerSerial.o \
           RunManagerYAMR.o \
           RunManagerGenie.o \
           RunManagerExternal.o \
           RunStorage.o \
           RunManagerAbstract.o \
           Serializeation.o \
           YamrSlave.o \
           linpackc.o \
           RunManagerCWrapper.o \
           RunManagerFortranWrapper.o 
 
$(OUT): $(OBJECTS)
	ar rcs $(OUT) $(OBJECTS)

%.o: %.cpp
	$(CXX) $(CFLAGS) $(INCLUDES) $< -c $(input) -o $@

%.o: %.c
	$(CC) $(CFLAGS) $(INCLUDES) $< -c $(input) -o $@

clean:
	-rm $(OBJECTS) $(OUT)