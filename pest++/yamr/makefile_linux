CXX := g++
CC := g++
CFLAGS := -g -c -std=c++0x -Wextra -Wall -Wswitch-enum -Wunreachable-code
INCLUDES := -I../ -I../iopp/iopp

OUT = librunmanager.a
OBJECTS	:= network_package.o \
           RunManagerSerial.o \
           Transformable.o \
           network_wrapper.o \
           RunManagerYAMR.o \
           RunManagerGenie.o \
           utilities.o \
           pest_error.o \
           RunStorage.o \
           RunManagerAbstract.o \
           Serializeation.o \
           system_variables.o \
           YamrSlave.o \
           linpackc.o \
           RunManagerCWrapper.o \
           RunManagerFortranWrapper.o 
 
$(OUT): $(OBJECTS)
	ar rcs $(OUT) $(OBJECTS)

%.o: %.cpp
	$(CXX) $(CFLAGS) $(INCLUDES) $< -c $(input) -o $@

%.o: %.c
	$(CC) $(CFLAGS) $(INCLUDES) $< -c $(input) -o $@

clean:
	-rm $(OBJECTS) $(OUT)