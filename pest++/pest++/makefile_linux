CXX := g++
FC := gfortran
CFLAGS := -g -c -std=c++0x  -Wextra -Wall  -Wswitch-enum -Wunreachable-code
FFLAGS := -g -c -cpp  -Wextra -Wall  -Wswitch-enum -Wunreachable-code
INCLUDES := -I ../ -I ../common -I ../iopp -I ../yamr -I ../pestpp_common

#LIBS := -L /opt/hesm/apps/gcc-4.9.0/lib64 -L /opt/hesm/lib64 -L /usr/lib64 -L/opt/local/lib64 -L ../common -L ../iopp -L ../yamr -L ../pestpp_common  -L ../propack -lpestpp_com -lrunmanager  -liopp  -lcommon -l propack -llapack -lblas -lgfortran  /opt/hesm/apps/gcc-4.9.0/lib64/libquadmath.a

LIBS :=  -L /usr/lib64 -L/opt/local/lib64 -L ../common -L ../iopp -L ../yamr -L ../pestpp_common -L ../pest_routines  -L ../propack -lpestpp_com -lrunmanager  -liopp  -lcommon -lpest_routines -l propack -llapack -lblas  -lgfortran /opt/local/gcc-4.9.0/lib64/libquadmath.a

EXE = pestpp
OBJECTS	:= pest++.o
 
#$(EXE): $(OBJECTS)
#	$(CXX) $(CFLAGS) -static -static-libgcc -static-libgfortran $(OBJECTS) $(LIBS) -o $(EXE)

$(EXE): $(OBJECTS)
	$(CXX) $(OBJECTS) $(LIBS) -o $(EXE)


%.o: %.cpp
	$(CXX) $(CFLAGS) $(INCLUDES) $< -c $(input) -o $@

%.o: %.for
	$(FC) $(FFLAGS) $(INCLUDES) $< -c $(input) -o $@

clean:
	rm $(OBJECTS) $(OUT)