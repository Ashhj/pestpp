CXX := g++
FC := gfortran
CFLAGS := -g -c -std=c++0x  -Wextra -Wall  -Wswitch-enum -Wunreachable-code
FFLAGS := -g -c -cpp  -Wextra -Wall  -Wswitch-enum -Wunreachable-code
INCLUDES := -I ../ -I ../yamr -I ../pestpp_common

#LIBS :=  -L /opt/pest/lib -L/usr/lib64 -L ../pest_routines -L ../yamr -L ../pestpp_common -L ../pestpp_common -L ../propack -l runmanager  -lpestpp_com -l pest_routines -l propack -llapack  -lblas -lgfortran 

LIBS := -L /opt/local/gcc-4.9.0/lib64 -L /usr/lib64 -L/opt/local/lib64  -L ../pest_routines -L ../yamr -L ../pestpp_common -L ../pestpp_common -L ../propack -l runmanager  -lpestpp_com -l pest_routines -l propack -llapack -lblas -lgfortran  /opt/local/gcc-4.9.0/lib64/libquadmath.a


EXE = pestpp
OBJECTS	:= pest++.o
 
$(EXE): $(OBJECTS)
	$(CXX) -static -static-libgcc -static-libgfortran $(OBJECTS) $(LIBS) -o $(EXE)

%.o: %.cpp
	$(CXX) $(CFLAGS) $(INCLUDES) $< -c $(input) -o $@

%.o: %.for
	$(FC) $(FFLAGS) $(INCLUDES) $< -c $(input) -o $@

clean:
	rm $(OBJECTS) $(OUT)